{
    "manifest_version": 2,
    "name": "unblock-youku-firefox",
    "description": "Port of the popular chrome extension Unblock-Youku",
    "version": "0.1.2",
    "author": "Zhe Chen",
    "homepage_url": "https://github.com/chenzhekl/unblock-youku-firefox",

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "browser_action": {
        "default_title": "Unblock Youku isn't working properly! Visit http://uku.im/faq for solutions.",
        "default_icon": "icons/icon19gray.png",
        "default_popup": "popup/index.html"
    },

    "background": {
        "scripts": ["background/index.js"]
    },

    "permissions":[
        "proxy",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],

    "applications": {
        "gecko": {
            "id": "chenzhekl@gmail.com"
        }
    }
}